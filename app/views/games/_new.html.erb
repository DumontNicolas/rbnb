<div class="container">
  <h1>Rent your own game!</h1>

  <br>
  <br>
  <%= simple_form_for(game) do |f| %>

    <div class="container-login">
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :category, collection: %W[Memory Card Knowledge Dices Logic Board Investigation]  %>
      <%= f.input :price %>
      <%= f.input :photos, input_html: { mutiply: true, class: 'd-none', id: 'photo-input'}, label_html: { class: 'upload-photo'}, label: ':camera: Upload a photo' %>  </div>
      <%= image_tag "", width: 300, class: "hidden", id: "photo-preview" %>
    </div>
<br>
  <div class="hbtn hb-fill-on">
    <%= f.button :submit, "Create Game"%>
  </div>
  <% end %>

  <br>
  <br>
  <%= link_to "Back to games list", games_path %>
</div>
